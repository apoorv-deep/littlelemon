# Example .env for Little Lemon Django project
# Copy this file to .env and adjust values for your environment.

# Django secret key (keep this secret in production)
SECRET_KEY=replace-me-with-a-secure-secret-key

# Debug mode: set to True for local development, False in production
DEBUG=True

# Comma-separated hosts allowed (leave blank for localhost during dev)
ALLOWED_HOSTS=localhost,127.0.0.1

# Database (defaults in settings use sqlite if unset)
# For SQLite (local dev) - keep DATABASE_ENGINE as below and set NAME to db.sqlite3
DATABASE_ENGINE=django.db.backends.mysql
DATABASE_NAME=reservations
DATABASE_USER=root
DATABASE_PASSWORD=root@123
DATABASE_HOST=127.0.0.1
DATABASE_PORT=3306
